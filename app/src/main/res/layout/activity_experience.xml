<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_green_1"
    tools:context=".ExperienceActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <ImageView
        android:id="@+id/iv_experience"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_experience"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26675788" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutExperience"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_detail_radius_container_top"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVerticalExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="102dp" />


        <com.dijon.aboutme.TagLabelText
            android:id="@+id/textView_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:text="Sidia Instituto de Tecnologia"
            android:textColor="@color/app_primary_green_1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/textView_positionJob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tagBold="true"
            app:tagFirst="true"
            app:tagMarginEnd="8dp"
            app:tagPaddingEnd="8dp"
            app:tagPaddingStart="8dp"
            app:tagRadius="6dp"
            app:tagSize="12sp"
            app:tagText="Atualmente"
            app:tagTextBackgroundColor="@color/app_primary_green_1"
            app:tagTextColor="#FFF" />
<!--        app:tagTextBackgroundColor="#E40C0C"-->
        <TextView
            android:id="@+id/textView_positionJob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Engenheiro de Software"
            android:textColor="@color/app_primary_green_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineVerticalExperience"
            app:layout_constraintTop_toBottomOf="@id/textView_company" />

        <TextView
            android:id="@+id/textView_descriptionJob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/app_primary_green_3"
            android:text="@string/descritionJob"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineVerticalExperience"
            app:layout_constraintTop_toBottomOf="@id/textView_positionJob" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>