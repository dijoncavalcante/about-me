<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_green_1"
    tools:context=".FindMeActivity">

    <include
        android:id="@+id/layout_include"
        layout="@layout/include_toolbar" />

    <ImageView
        android:id="@+id/iv_degree"
        style="@style/ImageViewTop"
        android:contentDescription="@string/findMe"
        android:src="@drawable/ic_findme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_include" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp"
        android:background="@drawable/bg_detail_radius_container_top">

        <LinearLayout
            android:id="@+id/linearLayoutFindMe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_degree">

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMeCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_call"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_call"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/textViewTitleCall"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_call"
                        android:text="@string/cellphone" />

                    <TextView
                        android:id="@+id/textViewSubtitleCall"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleCall"
                        android:layout_toRightOf="@id/iv_findme_call"
                        android:text="@string/_55_92_993210558" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View style="@style/ViewCustomized" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMeWpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeWpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_wpp"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_wpp"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/textViewTitleWpp"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_wpp"
                        android:text="@string/whatsapp" />

                    <TextView
                        android:id="@+id/textViewSubtitleWpp"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleWpp"
                        android:layout_toRightOf="@id/iv_findme_wpp"
                        android:text="@string/_55_92_993210558" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View style="@style/ViewCustomized" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMe_linkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeLinkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_linkedin"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_linkedin"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/textViewTitleLinkedin"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_linkedin"
                        android:text="@string/linkedin" />

                    <TextView
                        android:id="@+id/textViewSubtitleLinkedin"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleLinkedin"
                        android:layout_toRightOf="@id/iv_findme_linkedin"
                        android:text="@string/linkedin_dijon_braga" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <View style="@style/ViewCustomized" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMe_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeGithub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_github"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_github"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/textViewTitleGithub"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_github"
                        android:text="@string/github" />

                    <TextView
                        android:id="@+id/textViewSubtitleGithub"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleGithub"
                        android:layout_toRightOf="@id/iv_findme_github"
                        android:text="@string/user_dijoncavalcante" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View style="@style/ViewCustomized" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMeGmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeGmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_gmail"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_gmail"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />


                    <TextView
                        android:id="@+id/textViewTitleGmail"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_gmail"
                        android:text="@string/gmail" />

                    <TextView
                        android:id="@+id/textViewSubtitleGmail"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleGmail"
                        android:layout_toRightOf="@id/iv_findme_gmail"
                        android:text="@string/gmail_dijoncavalcante_gmail_com" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View style="@style/ViewCustomized" />


            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMeTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_twitter"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_twitter_2"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />


                    <TextView
                        android:id="@+id/textViewTitleTwitter"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_twitter"
                        android:text="@string/twitter" />

                    <TextView
                        android:id="@+id/textViewSubtitleTwitter"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleTwitter"
                        android:layout_toRightOf="@id/iv_findme_twitter"
                        android:text="@string/dijonbraga_intagram" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View style="@style/ViewCustomized" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carViewFindMeInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/cardBackground"
                app:cardCornerRadius="30dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutFindMeInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_findme_instagram"
                        style="@style/ImageViewShapeable"
                        android:src="@drawable/ic_instagram"
                        app:shapeAppearanceOverlay="@style/Circular"
                        app:strokeColor="@color/app_primary_green_3"
                        app:strokeWidth="5dp" />

                    <TextView
                        android:id="@+id/textViewTitleInstagram"
                        style="@style/TextViewTitleFindMe"
                        android:layout_toRightOf="@id/iv_findme_instagram"
                        android:text="@string/instagram" />

                    <TextView
                        android:id="@+id/textViewSubtitleInstagram"
                        style="@style/TextViewSubTitleFindMe"
                        android:layout_below="@id/textViewTitleInstagram"
                        android:layout_toRightOf="@id/iv_findme_instagram"
                        android:text="@string/dijonbraga_intagram" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>